{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2022"],
        "types": ["node"],

        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,

        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        "outDir": "dist",
        "rootDir": "."
    },
    "include": ["**/*.ts"],
    "exclude": ["dist", "node_modules"]
}
